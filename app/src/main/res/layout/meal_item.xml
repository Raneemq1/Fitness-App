<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="20dp"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            style="@style/meal_txt_style"
            android:layout_marginStart="28dp"
            android:layout_marginTop="22dp"
            android:text="Name"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/meal_image"
            android:layout_width="95dp"
            android:layout_height="92dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            card_view:layout_constraintStart_toEndOf="@+id/text_meal_category"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@drawable/loading" />

        <TextView
            android:id="@+id/text_meal_name"
            android:layout_width="120dp"
            android:layout_height="22dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="22dp"
            card_view:layout_constraintStart_toEndOf="@+id/textView2"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            style="@style/meal_txt_style"
            android:layout_marginStart="28dp"
            android:layout_marginTop="4dp"
            android:text="Category"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView6"
            style="@style/meal_txt_style"
            android:layout_marginStart="28dp"
            android:layout_marginTop="4dp"
            android:text="Area"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/text_meal_category"
            android:layout_width="120dp"
            android:layout_height="22dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            card_view:layout_constraintStart_toEndOf="@+id/textView5"
            card_view:layout_constraintTop_toBottomOf="@+id/text_meal_name" />

        <TextView
            android:id="@+id/text_meal_area"
            android:layout_width="120dp"
            android:layout_height="22dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            card_view:layout_constraintStart_toEndOf="@+id/textView6"
            card_view:layout_constraintTop_toBottomOf="@+id/text_meal_category" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>


