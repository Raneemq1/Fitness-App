<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FoodFragment" >

    <SearchView
        android:id="@+id/text_search_meal"
        android:layout_width="200dp"
        android:layout_height="39dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/meals_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="605dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_search_meal" />

    <Button
        android:id="@+id/btn_search_for_meal"
        style="@style/app_btn"
        android:layout_width="83dp"
        android:layout_height="33dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="10dp"
        android:text="Search"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/text_search_meal"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>