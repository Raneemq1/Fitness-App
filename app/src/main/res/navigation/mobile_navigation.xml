<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.fitnessapp.ui.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_physical"
        android:name="com.example.fitnessapp.ui.PhysicalFragment"
        android:label="@string/title_physical"
        tools:layout="@layout/fragment_physical" />

    <fragment
        android:id="@+id/navigation_mental"
        android:name="com.example.fitnessapp.ui.MentalFragment"
        android:label="@string/title_mental"
        tools:layout="@layout/fragment_mental" />


    <fragment
        android:id="@+id/navigation_food"
        android:name="com.example.fitnessapp.ui.FoodFragment"
        android:label="@string/title_food"
        tools:layout="@layout/fragment_food" />
